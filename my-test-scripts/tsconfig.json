{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ES6", "ES2015", "ESNext"],
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "templates"
  ]
}
