{
	"name": "sdk",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"command": "bun i && bun run build && bun link",
				"cwd": "drift-common/protocol/sdk"
			},
			"outputs": [
				"{workspaceRoot}/dist"
			]
		},
		"link": {
			"executor": "nx:run-commands",
			"options": {
				"command": "bun link",
				"cwd": "drift-common/protocol/sdk"
			},
			"dependsOn": [
				"build"
			]
		}
	}
}